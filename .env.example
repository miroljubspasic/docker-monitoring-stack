# Application Ports
APP_PORT=80
APP_SECURE_PORT=443

# SSL/TLS Configuration
LETSENCRYPT_EMAIL=your-email@example.com

# Graylog Configuration
# Generate GRAYLOG_PASSWORD_SECRET with: pwgen -N 1 -s 96
GRAYLOG_PASSWORD_SECRET=CHANGE_ME_TO_RANDOM_96_CHAR_STRING
# Generate GRAYLOG_ROOT_PASSWORD_SHA2 with: echo -n "yourpassword" | sha256sum | cut -d" " -f1
GRAYLOG_ROOT_PASSWORD_SHA2=CHANGE_ME_TO_SHA256_HASH_OF_YOUR_PASSWORD

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme
GRAFANA_SERVER_DOMAIN=grafana.localhost
GRAFANA_SERVER_ROOT_URL=https://grafana.localhost
GRAFANA_HOSTNAME=grafana-dev.localhost
GRAFANA_IMAGE=grafana/grafana:latest

# Registry Configuration
REGISTRY_HOSTNAME=hub-dev.localhost
REGISTRY_IMAGE=registry:3
REGISTRY_PORT=5000

# Prometheus Configuration
PROMETHEUS_HOSTNAME=prometheus-dev.localhost
PROMETHEUS_IMAGE=prom/prometheus:v3.7.2
# Generate PROMETHEUS_ADMIN_PASSWORD with: docker-compose run --rm --entrypoint caddy caddy hash-password --plaintext 'password'
PROMETHEUS_ADMIN_PASSWORD=$2a$14$CHANGE_ME_TO_BCRYPT_HASH

# Node Exporter Configuration
NODEEXPORTER_IMAGE=prom/node-exporter:v1.10.2

# cAdvisor Configuration
CADVISOR_IMAGE=gcr.io/cadvisor/cadvisor:v0.52.0

# MongoDB Configuration
MONGODB_IMAGE=mongo:7.0

# Graylog DataNode Configuration
DATANODE_IMAGE=graylog/graylog-datanode:6.3
GRAYLOG_IMAGE=graylog/graylog:6.3
GRAYLOG_HOSTNAME=graylog-dev.localhost

# OpenSearch Configuration
OPENSEARCH_IMAGE=opensearchproject/opensearch:2.12.0
OPENSEARCH_JAVA_OPTS=-Xms1g -Xmx1g
# Generate OPENSEARCH_ADMIN_PASSWORD with: tr -dc A-Z-a-z-0-9_@#%^-_=+ < /dev/urandom | head -c32
OPENSEARCH_ADMIN_PASSWORD=CHANGE_ME_TO_RANDOM_32_CHAR_STRING

# Caddy Configuration
CADDY_DEBUG_LEVEL=warn

# Data Directories (uncomment and set for production)
# CADDY_DATA=/home/monitoring/projects
# PROMETHEUS_DATA=/home/monitoring/projects
# REGISTRY_DATA=/home/monitoring/projects
# MONGODB_DATA=/home/monitoring/projects
# GRAYLOG_DATA=/home/monitoring/projects

# Legacy Traefik (not used with Caddy setup)
TRAEFIK_IMAGE=traefik:v3.5
